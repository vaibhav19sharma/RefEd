<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73cd6a"
        tools:context="com.example.vaibh.refed.Login">

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAge"
            android:layout_below="@+id/txtWelcome"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your Username" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtUsername"
            android:layout_below="@+id/edtUsername"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your Password" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtHostCountry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:text="Signup" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:includeFontPadding="true"
            android:text="Welcome to RefEd"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtPassword"
            android:layout_below="@+id/edtPassword"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name" />

        <EditText
            android:id="@+id/edtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter your Age" />

        <EditText
            android:id="@+id/edtHomeCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAge"
            android:layout_below="@+id/edtAge"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Home Country" />

        <EditText
            android:id="@+id/edtHostCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtHomeCountry"
            android:layout_below="@+id/edtHomeCountry"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Host Country" />
    </RelativeLayout>
</ScrollView>