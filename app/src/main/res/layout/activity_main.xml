<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce6ff"
    tools:context="com.example.vaibh.refed.MainActivity">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="RefEd Welcome Screen Logo"
        app:srcCompat="@drawable/refed_logo"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_marginStart="59dp"
        android:layout_marginTop="39dp"
        android:text="TextView"
        android:textColor="#cce6ff"/>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Swipe Anywhere to get Started"
        android:textStyle="bold|italic" />

</RelativeLayout>
